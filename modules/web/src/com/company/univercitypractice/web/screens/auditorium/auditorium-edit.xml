<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://auditoriumEdit.caption"
        focusComponent="form"
        messagesPack="com.company.univercitypractice.web.screens.auditorium">
    <data>
        <instance id="auditoriumDc"
                  class="com.company.univercitypractice.entity.Auditorium">
            <view extends="_local">
                <property name="employment" view="_minimal">
                    <property name="day"/>
                    <property name="time"/>
                    <property name="teacher" view="_minimal"/>
                </property>
                <property name="group" view="_minimal">
                    <property name="numberNameGroup"/>
                </property>
                <property name="laboratory" view="_minimal"/>
                <property name="lecture" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="auditoriumDc">
            <column width="350px">
                <pickerField id="employmentField" property="employment">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="laboratoryField" property="laboratory">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="lectureField" property="lecture">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
